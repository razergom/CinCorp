<%- include('header.ejs'); %>

<h3 class="person-h">Adding Person</h3>
<form action="" method="post" class="person-edit-form">
    <div class="form-group">
        <label for="person-name">Name</label>
        <input type="text" class="form-control" name="person_name" id="person_name" required>
    </div>
    <div class="form-group">
        <label for="person-year">Year of Birth</label>
        <input type="text" class="form-control" name="person_year" id="person_year" required>
    </div>
    <div class="form-group">
        <label for="person-country">Country</label>
        <input type="text" class="form-control" name="person_country" id="person_country" required>
    </div>
    <div class="form-group">
        <label for="person-died">Died</label>
        <input type="text" class="form-control" name="person_died" id="person_died">
    </div>
    <button type="submit" class="btn btn-success float-center person-edit-btn">Add Person</button>
</form>
</body>

</html>