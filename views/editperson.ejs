<%- include('header.ejs'); %>

        <% if (person) { %>
            <h3 class="person-h">Editing Person</h3>
            <form action="" method="post" enctype="multipart/form-data" class="person-edit-form">
                <div class="form-row">
                    <div class="form-group">
                        <label for="person-name">Name</label>
                        <input type="text" class="form-control" name="person_name" id="person-name" value="<%= person.name %>"
                            required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="person-year">Year of Birth</label>
                        <input type="text" class="form-control" name="person_year" id="person-year" value="<%= person.born %>"
                            required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="person-country">Country</label>
                        <input type="text" class="form-control" name="person_country" id="person-country" value="<%= person.country %>"
                            required>
                    </div>
                </div>
                <button type="submit" class="btn btn-success float-center person-edit-btn">Update Person</button>
            </form>
        <% } else { %>
            <p class="text-center">Person not Found.</p>
        <% } %>
    </body>
</html>
